<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>LISTE DES COMMODITES</h5>
            <span>Gestion des actions liées aux commodités.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "miscs/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= misc_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des commodités</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Description de la commodité</th>
          <th>Icône descriptive</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @miscs.blank? %>
          <% @miscs.each do |misc| %>
            <tr class="gradeA">
              <% css_class = (misc.published == false ? 'taskD' : 'taskPr') %>
              <td class = "<%= css_class %>">
                <%= misc.description %>
              </td>
              <td>
                <%= image_tag misc.icon.url(:icon) %>
              </td>
              <td class = "actBtns">
                <a href="<%= edit_misc_path(misc.id) %>" class="tipS" original-title="Modifier"><%= image_tag('icons/edit.png', alt: '') %></a>
                <% if misc.published == false %>
                  <a href="<%= enable_misc_path(misc.id) %>" class="tipS" original-title="Activer"><%= image_tag('icons/updateDone.png', alt: '') %></a>
                <% else %>
                  <a href="<%= disable_misc_path(misc.id) %>" class="tipS" original-title="Désactiver"><%= image_tag('icons/remove.png', alt: '') %></a>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
