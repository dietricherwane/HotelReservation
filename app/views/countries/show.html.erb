<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Liste des pays</h5>
            <span>Prise en charge des actions liées à la liste des pays.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "countries/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= country_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des pays</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Nom du pays</th>
          <th>Code du pays</th>
          <th>Nombre de villes</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @countries.blank? %>
          <% @countries.each do |country| %>
            <tr class="gradeA">
              <% css_class = (country.published == false ? 'taskD' : 'taskPr') %>
              <td class = "<%= css_class %>">
                <%= country.name %>
              </td>
              <td>
                <%= country.code %>
              </td>
              <td>
                <%= country.cities.count %>
              </td>
              <td class = "actBtns">
                <a href="<%= cities_per_country_path(country.id) %>" class="tipS" original-title="Liste des villes"><%= image_tag('icons/color/home.png', alt: '') %></a>
                <% if country.published == false %>
                  <a href="<%= enable_country_path(country.id) %>" class="tipS" original-title="Activer"><%= image_tag('icons/updateDone.png', alt: '') %></a>
                <% else %>
                  <a href="<%= disable_country_path(country.id) %>" class="tipS" original-title="Désactiver"><%= image_tag('icons/remove.png', alt: '') %></a>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
