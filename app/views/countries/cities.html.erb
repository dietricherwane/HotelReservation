<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Liste des villes</h5>
            <span>Prise en charge des actions liées à la liste des villes: <b><%= @country.name %></b>.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "countries/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= country_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des villes: <%= @country.name %></h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Nom de la ville</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @cities.blank? %>
          <% @cities.each do |city| %>
            <tr class="gradeA">
              <% css_class = (city.published == false ? 'taskD' : 'taskPr') %>
              <td class = "<%= css_class %>">
                <%= city.name %>
              </td>
              <td class = "actBtns">
                <a href="<%= edit_city_path(city.id) %>" class="tipS" original-title="Modifier"><%= image_tag('icons/edit.png', alt: '') %></a>
                <% if city.published == false %>
                  <a href="<%= enable_city_path(city.id) %>" class="tipS" original-title="Activer"><%= image_tag('icons/updateDone.png', alt: '') %></a>
                <% else %>
                  <a href="<%= disable_city_path(city.id) %>" class="tipS" original-title="Désactiver"><%= image_tag('icons/remove.png', alt: '') %></a>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
