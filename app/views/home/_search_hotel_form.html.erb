<div class="feature_section1">
  <div class="container">
    <%= notification_messages! %>
	  <h2>
      Rechercher des <strong>hôtels</strong>
      <b>Veuillez entrer une destination, un hôtel, un lieu d'intérêt ou une adresse</b>
    </h2>

    <div class="reg_form">
      <%= form_tag(search_hotel_path, method: :post, class: "sky-form") do %>
		    <fieldset>
			    <section>
				    <label class="input">
					    <i class="icon-append icon-map-marker"></i>
					    <%= text_field_tag :terms, session[:search_hotel_terms], placeholder: "Destination, hôtel ou lieu d’intérêt", :options => {:autocomplete => 'off'} %>
				    </label>
			    </section>

		    <fieldset>
			    <div class="row">
				    <section class="col col-6">
					    <label class="input">
					      <i class="icon-append icon-calendar"></i>
					      <%= text_field_tag :begin_date, session[:search_hotel_begin_date], placeholder: "La date de début", :options => {id: "begin_date"} %>

					    </label>
				    </section>
				    <section class="col col-6">
					    <label class="input">
					      <i class="icon-append icon-calendar"></i>
						    <%= text_field_tag :end_date, session[:search_hotel_end_date], placeholder: "La date de fin", :options => {id: "end_date"} %>
					    </label>
				    </section>
			    </div>

          <div id = "night_section">
			      <section>
			        <a class="but_calendar" style = "cursor: default; color: white;"><i class="fa fa-calendar fa-lg"></i>
			          <span id = "night_number">
			          </span>

			          <span id = "night_s">
			            Nuit
			          </span>
			        </a>
			      </section>
          </div>

			    <section>
				    <label class="select">
				      <%= collection_select :post, :adults, 1..8, :to_s, :to_s, {:prompt => "Veuillez choisir le nombre d'adultes", selected: session[:search_hotel_adult]} %>
					    <i></i>
				    </label>
			    </section>

			    <section>
				    <label class="select">
				      <%= collection_select :post, :children, 0..3, :to_s, :to_s, {:prompt => "Veuillez choisir le nombre d'enfants", selected: session[:search_hotel_children]} %>
					    <i></i>
				    </label>
			    </section>
		    </fieldset>

		    <footer>
			    <button type="submit" class="button"><i class="fa fa-search fa-lg" style = "margin-right: 10px;"></i>Recherchez     </button>
		    </footer>
      <% end %>
	    <!--</form>-->

    </div>

  </div>
</div><!-- end search form section1 -->
