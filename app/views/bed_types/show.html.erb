<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>LISTE DES TYPES DE LITS</h5>
            <span>Prise en charge des actions liées aux types de lits.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "bed_types/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= bed_type_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des types de lits</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Nom du type de lit</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @bed_types.blank? %>
          <% @bed_types.each do |bed_type| %>
            <tr class="gradeA">
              <% css_class = (bed_type.published == false ? 'taskD' : 'taskPr') %>
              <td class = "<%= css_class %>">
                <%= bed_type.name %>
              </td>
              <td class = "actBtns">
                <a href="<%= edit_bed_type_path(bed_type.id) %>" class="tipS" original-title="Modifier"><%= image_tag('icons/edit.png', alt: '') %></a>
                <% if bed_type.published == false %>
                  <a href="<%= enable_bed_type_path(bed_type.id) %>" class="tipS" original-title="Activer"><%= image_tag('icons/updateDone.png', alt: '') %></a>
                <% else %>
                  <a href="<%= disable_bed_type_path(bed_type.id) %>" class="tipS" original-title="Désactiver"><%= image_tag('icons/remove.png', alt: '') %></a>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
