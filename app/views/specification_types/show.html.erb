<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>LISTE DES CATEGORIES DE SPECIFICATIONS</h5>
            <span>Gestion des actions liées aux catégories de spécifications.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "specification_types/shared/sub_menu" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= specification_type_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des catégories de spécifications</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Nom de la catégorie de spécification</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @specification_types.blank? %>
          <% @specification_types.each do |specification_type| %>
            <tr class="gradeA">
              <% css_class = (specification_type.published == false ? 'taskD' : 'taskPr') %>
              <td class = "<%= css_class %>">
                <%= specification_type.name %>
              </td>
              <td class = "actBtns">
                <a href="<%= edit_specification_type_path(specification_type.id) %>" class="tipS" original-title="Modifier"><%= image_tag('icons/edit.png', alt: '') %></a>
                <% if specification_type.published == false %>
                  <a href="<%= enable_specification_type_path(specification_type.id) %>" class="tipS" original-title="Activer"><%= image_tag('icons/updateDone.png', alt: '') %></a>
                <% else %>
                  <a href="<%= disable_specification_type_path(specification_type.id) %>" class="tipS" original-title="Désactiver"><%= image_tag('icons/remove.png', alt: '') %></a>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
<!-- End Main content wrapper -->
